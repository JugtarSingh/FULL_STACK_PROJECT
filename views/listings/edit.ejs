<%-layout("../layouts/boilerplate.ejs")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="mt-3">Edit Listing Details</h3>
    <form action="http://localhost:8080/listings/<%=list._id%>/edit"  
      novalidate 
      class="needs-validation" 
      method="POST"
      enctype="multipart/form-data"
      >
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" name="title" placeholder="Enter the title" value="<%=list.title%>" required>
            <div class="invalid-feedback">Title should be valid </div> 
          </div>

          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea type="text" name="description" placeholder="Enter the description"  class="form-control" required><%= list.description %></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
          </div>

          <div class="mb-3">
            <img src="<%=list.image.url %>" style="height: 13rem;  width: 12rem; " alt="">
          </div>
 
          <div class="mb-3">
            <label  class="form-label">Upload-Image</label>
            <input type="file" name="image[url]"  class="form-control" >
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <label  class="form-label">Price</label>
              <input type="number" name="price" placeholder="enter price"  class="form-control"value="<%=list.price %>" required>
              <div class="invalid-feedback">Price  should be valid </div>
            </div>
            <div class="mb-3 col-md-8">
              <label class="form-label">Country</label>
              <input type="text" name="country" placeholder="Enter the country" class="form-control" value="<%=list.country %>" required>
              <div class="invalid-feedback">Country should be valid </div>
            </div>
          </div>

          <div class="mb-3">
            <label  class="form-label">Location</label>
            <input type="text" name="location" placeholder="Enter the location" class="form-control" value="<%=list.country %>" required> 
            <div class="invalid-feedback">Location should be valid </div>
          </div>
        <button class="btn mt-3">Edit</button>
    </form>
        </div>
    </div>
</body>
